//Mondrian Style Artwork

void setup() {
  size(600, 600);
  background(255);

  Rectangles();
  Lines();
}

void Lines() {
  stroke(0);
  strokeWeight(8);
  line(200, 0, 200, 600);
  line(400, 0, 400, 600);
  line(200, 50, 400, 50);
  line(250, 0, 250, 50);
  line(300, 0, 300, 50);
  line(0, 250, 600, 250);
  line(350, 250, 350, 600);
  line(200, 350, 600, 350);
  line(300, 350, 300, 600);
  line(350, 500, 600, 500);
  line(0, 450, 350, 450);
  line(200, 500, 300, 500);
  line(250, 450, 250, 500);
  line(400,100,600,100);
  line(150,250,150,450);
  line(0,350,150,350);
  line(0,150,200,150);
  line(100,150,100,350);
  line(50,350,50,450);
  line(100,300,150,300);
  line(400,150,600,150);
  line(450,100,450,150);
  line(500,100,500,150);
  line(550,150,550,250);
  line(500,250,500,350);
  line(400,300,500,300);
  line(450,350,450,600);
  line(550,500,550,600);
}

void Rectangles() {
  noStroke();
  
  fill(0,0,255);//Blue
  rect(200,0,50,50);
  rect(200,350,100,100);
  rect(100,250,50,50);
  rect(0,350,50,100);
  rect(450,100,50,50);
  rect(400,300,100,50);
  rect(450,500,100,100);
  
  fill(255,255,0);//Yellow
  rect(250,0,50,50);
  rect(350,350,50,150);
  rect(200,450,50,50);
  rect(100,300,50,50);
  rect(400,100,50,50);
  rect(500,250,100,100);
  
  fill(255,0,0);//Red
  rect(200,250,150,100);
  rect(300,450,50,150);
  rect(0,150,100,100);
  rect(400,150,150,100);
  rect(400,350,50,150);
}
